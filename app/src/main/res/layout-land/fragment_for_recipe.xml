<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/viewPager_text"
        android:id="@+id/recipe_photo"
        android:src="@drawable/salmonandpotatoes"/>

    <TextView
        android:id="@+id/viewPager_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        android:gravity="start"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recipe_photo"
        android:layout_toLeftOf="@+id/viewPager_text"
        android:text="save"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:id="@+id/saved_recipe_list_button"
        android:layout_below="@+id/save_button"
        android:layout_toLeftOf="@+id/viewPager_text"
        android:text="saved recipe list"/>

</RelativeLayout>